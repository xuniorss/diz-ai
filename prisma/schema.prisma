// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  userId String  @id
  isRh   Boolean @default(false)
  name   String
  email  String  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company        Company[]
  companyworkers CompanyWorkers[]
  Occurrencies   Occurrencies[]
}

model Company {
  id          String @id @default(uuid())
  companyName String @default("")
  cnpj        String @default("") @db.VarChar(18)
  userId      String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  companykeys    CompanyKeys[]
  companyworkers CompanyWorkers[]
  Occurrencies   Occurrencies[]

  @@index([userId])
}

model CompanyKeys {
  id             String    @id @default(uuid())
  companyId      String
  used           Boolean   @default(false)
  expirationTime DateTime?

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
}

model CompanyWorkers {
  id        String @id @default(uuid())
  userId    String
  companyId String

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [userId], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
  @@index([userId])
}

model OccurrenciesTypes {
  id   String @id @default(uuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Occurrencies Occurrencies[]
}

model Occurrencies {
  id               String  @id @default(uuid())
  email            String?
  userId           String
  companyId        String
  message          String  @db.Text
  occurrenceTypeId String

  occurrenciesTypes OccurrenciesTypes @relation(fields: [occurrenceTypeId], references: [id], onDelete: Cascade)
  user              User              @relation(fields: [userId], references: [userId], onDelete: Cascade)
  company           Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([occurrenceTypeId])
  @@index([userId])
  @@index([companyId])
}
